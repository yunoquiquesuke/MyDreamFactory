<h1>タスクの増加は信頼の証拠！</h1>
<%= form_for :yet_dream, url: yet_dream_index_path do |f| %>
<p>
  <%= f.text_field :name, placeholder: 'どんな仕事（コミュニティ）ですか？' %>
  <% if @yet_dream.errors.messages[:name].any? %>
  <span class="error"><%= @yet_dream.errors.messages[:name][0] %></span>
  <% end %>

</p>
  <%= f.hidden_field :is_done, value:0 %>
<p>
  <%= f.submit %>
</p>
<% end %>
